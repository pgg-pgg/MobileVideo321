<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:layout_height="100dp">

    <RelativeLayout
        android:padding="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <RelativeLayout
            android:id="@+id/rl_image"
            android:layout_width="100dp"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/iv_icon"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/video_default"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/center_collect_play"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_toRightOf="@id/rl_image"
            android:layout_toLeftOf="@id/tv_video_length"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000"
                android:singleLine="true"
                android:text="蜘蛛侠：新纪元 中文预告"/>

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#333"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:text="蜘蛛侠平行宇宙拓展新世界"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_video_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="01:20"
            android:textColor="#333"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_video_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:textColor="#333"
        android:text="动画 动作 冒险 科幻"/>

</LinearLayout>